<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!-- Display -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="end|bottom"
        android:text="0"
        android:textSize="64sp"
        android:textColor="#FFFFFF"
        android:padding="20dp" />

    <!-- Buttons Grid -->
    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="16dp">

        <!-- Row 1 -->
        <Button android:text="AC" style="@style/CalcButton.Gray"/>
        <Button android:text="+/-" style="@style/CalcButton.Gray"/>
        <Button android:text="%" style="@style/CalcButton.Gray"/>
        <Button android:text="÷" style="@style/CalcButton.Orange"/>

        <!-- Row 2 -->
        <Button android:text="7" style="@style/CalcButton.Dark"/>
        <Button android:text="8" style="@style/CalcButton.Dark"/>
        <Button android:text="9" style="@style/CalcButton.Dark"/>
        <Button android:text="×" style="@style/CalcButton.Orange"/>

        <!-- Row 3 -->
        <Button android:text="4" style="@style/CalcButton.Dark"/>
        <Button android:text="5" style="@style/CalcButton.Dark"/>
        <Button android:text="6" style="@style/CalcButton.Dark"/>
        <Button android:text="−" style="@style/CalcButton.Orange"/>

        <!-- Row 4 -->
        <Button android:text="1" style="@style/CalcButton.Dark"/>
        <Button android:text="2" style="@style/CalcButton.Dark"/>
        <Button android:text="3" style="@style/CalcButton.Dark"/>
        <Button android:text="+" style="@style/CalcButton.Orange"/>

        <!-- Row 5 -->
        <Button android:text="0" style="@style/CalcButton.Dark"
            android:layout_columnSpan="2"/>
        <Button android:text="." style="@style/CalcButton.Dark"/>
        <Button android:text="=" style="@style/CalcButton.Orange"/>
    </GridLayout>

</LinearLayout>
